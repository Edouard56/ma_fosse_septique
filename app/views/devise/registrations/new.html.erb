
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-12">
         <h2>Professionnels : merci de vous enregistrez ici pour avoir accès à votr tableau de bord !</h2>
      </div>

      <div class="col-xs-12 col-md-6 col-lg-6">

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, placeholder: "jp@mail.com", label: "Entrez votre courriel" %>
          <%= f.input :password, required: true, label: "Entrez votre mot de passe", hint: ("#{@minimum_password_length} charactères minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true, label: "Confirmez votre mot de passe" %>
          <%= f.input :first_name, placeholder: "Bob", label: "Prénom" %>
          <%= f.input :last_name, placeholder: "Bob", label: "Nom" %>
          <%= f.input :company %>
          <%= f.input :address %>
          <%= f.input :mobile_phone %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up" %>

        </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
<br><br><br>
